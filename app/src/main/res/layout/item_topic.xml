<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:paddingVertical="7dp"
    android:paddingHorizontal="13dp"
    android:background="@drawable/shape_stroke_grey100_radius_20_rect">

    <ImageView
        android:id="@+id/iv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hamburger"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/tv_topic_title"
        app:layout_constraintTop_toTopOf="@id/tv_topic_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_topic_title"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_topic_title"
        style="@style/TextAppearance.AppleSDGothic.Info"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_topic"
        android:layout_height="wrap_content"
        android:textColor="@color/carrot_black"
        android:textSize="12sp"
        tools:text="동네백과" />

</androidx.constraintlayout.widget.ConstraintLayout>